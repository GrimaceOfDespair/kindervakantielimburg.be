@using N2.Security

@if(Request.IsAuthenticated) 
{
	<a href="@Url.Action("LogOff", "Membership")">@Content.Translate["Log off"] <strong>@(N2.Context.Current.Resolve<ItemBridge>().GetUser(Context.User.Identity.Name).Title)</strong></a>
}
else
{
	var returnUrl = Request["returnUrl"] ?? Content.Data.Url ?? Content.Traverse.StartPage.Url;
	@Html.ActionLink(Content.Translate.Text("Log on"), "LogOn", new { controller = "Membership", returnUrl = returnUrl })
}
